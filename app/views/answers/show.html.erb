<h1>Question</h1>

<p>
  <%= link_to @answer.question.body, question_path(@answer.question) %>
</p>

<p>
  <b>Answer:</b>
  <%= @answer.body %>
</p>

<p>
  <b>Correct:</b>
  <%= @answer.correct %>
</p>
<%= button_to "Edit", edit_answer_path(@answer), method: :get %>
<%= button_to "Delete", answer_path(@answer), method: :delete %>
<%= link_to "Delete", answer_path(@answer), method: :delete,
                                            data: { confirm: "Are you sure?" } %>