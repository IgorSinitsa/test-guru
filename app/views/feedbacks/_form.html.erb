<div class="col-3  border rounded p-3 border-info">
  <%= render 'shared/errors', object: @feedback %>
  <%= form_with( model: @feedback, local: true ) do |form| %>
    <div class="form-group">
      <%= form.label :author, t('feedback.author') %>
      <%= form.text_field :author, class: "form-control"   %>
    </div>
    <div class="form-group">
      <%= form.label :email, t('feedback.email') %>
      <%= form.text_field :email, class: "form-control"   %>
    </div>
    <div class="form-group">
      <%= form.text_area :text, class: "form-control", required: true %>
    </div>
    <%= form.submit t('feedback.send'), class: 'btn btn-outline-primary' %>
  <% end %>
</div>
