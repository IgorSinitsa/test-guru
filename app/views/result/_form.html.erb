<%= form_with url: result_path(@result), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids,
                                  @result.current_question.answers,
                                  :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <p> <%= link_to t("button.gist"), gist_result_path(@result), method: :post %> </p>
  <p><%= form.submit "Next" %></p>
<% end %>
